@model Instagrames.Models.User

@{
    ViewData["Title"] = "Details";
}

<h1>Hello @Model.DisplayName</h1>

<form method="POST" action="/Users/NewPost">
    <div class="form-group">
        <label>Title</label>
        <input type="text" name="Title">
    </div>
    <div class="form-group">
        <label>Body</label>
        <input type="text" name="Body">
    </div>
    <div class="form-group">
        <label>Image</label>
        <input type="text" name="Image">
    </div>
    <input type="hidden" value="@Model.Id" name="UserId">
    <button type="submit" class="btn btn-primary">Post your image!</button>
</form>

<div class="posts">
    @foreach (var post in Model.Posts)
    {
        <p>@post.Title</p>
    }
</div>

<a asp-action="Index">Back to List</a>

